<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bkotyik.mobsoft2016">

    <application
        android:name=".IndoorMapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="DATABASE" android:value="database.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="bkotyik.mobsoft2016.model" />
        <activity
            android:name="bkotyik.mobsoft2016.view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bkotyik.mobsoft2016.view.EmployeeSearchActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="bkotyik.mobsoft2016.view.FloorDetailsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="bkotyik.mobsoft2016.view.FloorEditorActivity"
            android:label="@string/app_name">
        </activity>
        <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    </application>

</manifest>
